generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Publications {
  id         Int      @id @default(autoincrement())
  authorId   String   @map("author_id")
  title      String   @default("") @map("title")
  status     String   @default("PUBLISHED")
  typeOfPost Int      @map("type_of_post")
  post       Json     @default("{}")
  createdAt  DateTime @default(now()) @map("created_at")
  updatedAt  DateTime @updatedAt @map("updated_at")
  categoryId Int?

  category Categories? @relation(fields: [categoryId], references: [categoryId])
  likes    Likes[]
  comments Comments[]

  @@map("publications")
}

model Categories {
  categoryId Int    @id @default(autoincrement()) @map("category_id")
  title      String

  posts Publications[]

  @@map("categories")
}

model Comments {
  id            Int       @id @default(autoincrement())
  userId        String    @map("user_id")
  publicationId Int       @map("publication_id")
  text          String
  createdAt     DateTime  @default(now()) @map("created_at")
  updatedAt     DateTime? @map("updated_at")

  publication Publications @relation(fields: [publicationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("comments")
}

model Likes {
  id            Int    @id @default(autoincrement())
  userId        String @map("user_id")
  publicationId Int    @map("publication_id")

  publication Publications @relation(fields: [publicationId], references: [id], onDelete: Cascade, onUpdate: Cascade)

  @@map("likes")
}
